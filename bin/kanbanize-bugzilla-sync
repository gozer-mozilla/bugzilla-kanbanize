#!/usr/bin/env perl

#PODNAME: kanbanize-bugzilla-sync

use strict;
use warnings;

use FindBin;
use lib "$FindBin::Bin/../lib";
use Log::Log4perl qw(:easy);

use Net::Bugzilla::Kanbanize;

use AppConfig;
my $config = AppConfig->new(
    "verbose",
    "version",
    "test",
    "kanbanize_apikey=s",
    "kanbanize_boardid=i",
    "kanbanize_incoming=s",
    "kanbanize_priority=s",
    "bugzilla_token=s",
    "bugzilla_id=s",
    "component=s@",
    "product=s@",
    "tag=s",
    "mail-map_bugmail=%",
    
    # "bugzilla_url=s", { DEFAULT => "https://bugzilla.mozilla.org" },
    # "kanbanize_url=s", { DEFAULT => "https://kanbanize.com" },
);

$config->file("sync.cfg") if -r "sync.cfg";
$config->args();

my $loglevel = $INFO;
if ($config->verbose) {
  $loglevel = $DEBUG;
}

Log::Log4perl->easy_init({
  level => $loglevel,
  layout => '%d{APACHE} [%p] %m%n',
});

my $app = Net::Bugzilla::Kanbanize->new($config);

if ($config->version) {
  my $version = $app->version();
  print STDERR "$0: $version\n";
  exit;
}

exit $app->run();
